{
  "name": "codex-beta",
  "version": "1.0.0",
  "description": "Enhanced OpenAI Codex with MCP/A2A bridging, neural meshes, swarm coordination, and consensus mechanisms",
  "main": "dist/index.js",
  "bin": {
    "codex-beta": "dist/cli/index.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "ts-node src/index.ts",
    "start": "node dist/index.js",
    "test": "node -e \"console.log('No tests configured')\"",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "cli": "ts-node src/cli/index.ts",
    "prepare": "npm run build",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "codex",
    "ai",
    "agents",
    "mcp",
    "neural-mesh",
    "swarm",
    "consensus",
    "blockchain",
    "distributed-systems"
  ],
  "author": "codex-beta contributors",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.43.0",
    "@typescript-eslint/parser": "^8.43.0",
    "eslint": "^9.35.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.10",
    "prettier": "^3.6.2",
    "ts-node": "^10.9.2",
    "tsx": "^4.7.0"
  },
  "dependencies": {
    "@anthropic-ai/claude-code": "latest",
    "chalk": "^5.3.0",
    "commander": "^11.1.0",
    "crypto-js": "^4.2.0",
    "inquirer": "^9.2.0",
    "sqlite3": "^5.1.6",
    "typescript": "^5.3.0",
    "uuid": "^13.0.0",
    "ws": "^8.14.2"
  }
}
